<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <SurfaceView
        android:id="@+id/main_record_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/main_record_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="开始录像"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_switch_camera_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_record_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"      
        android:text="切换摄像头"
        android:textSize="16sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/main_capture_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_switch_camera_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="抓拍"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>